{
  "name": "camera-api",
  "private": true,
  "author": "Oron Nadiv <oron@nadiv.us> (https://github.com/OronNadiv/)",
  "homepage": "https://github.com/OronNadiv/camera-api/",
  "bugs": "https://github.com/OronNadiv/camera-api/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/OronNadiv/camera-api.git"
  },
  "license": "AGPL-3.0",
  "engines": {
    "node": "^6",
    "npm": "^3"
  },
  "scripts": {
    "babel": "rm -rf ./lib && mkdir ./lib && babel -L -D src/ --out-dir lib/",
    "cover": "istanbul cover _mocha -- --require babel-core/register --recursive -t 10000",
    "lint": "eslint src test",
    "start": "if [ \"$NODE_ENV\" = production ]; then node lib/app.js; else babel-node lib/app.js; fi",
    "test": "mocha --require babel-core/register --recursive -t 10000 && npm run lint",
    "test-coveralls": "istanbul cover _mocha --report lcovonly -- --require babel-core/register --recursive -t 10000 -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "postinstall": "npm run babel"
  },
  "dependencies": {
    "babel-cli": "^6",
    "babel-preset-es2015": "^6",
    "bluebird": "^3",
    "body-parser": "^1",
    "cookie-parser": "^1",
    "cors": "^2",
    "debug": "^2",
    "diehard": "^1",
    "express": ">=4.5 <5",
    "jsonwebtoken": "^7",
    "redis": "^2",
    "socket.io-emitter": "^1"
  },
  "devDependencies": {
    "chance": "^1",
    "coveralls": "^2",
    "eslint": "^3",
    "eslint-config-standard": "^5",
    "eslint-plugin-promise": "^2",
    "eslint-plugin-standard": "^2",
    "factory-girl": "^3",
    "factory-girl-bookshelf": "^1",
    "istanbul": "^0.4",
    "mocha": "^3",
    "should": "^10",
    "supertest": "^2",
    "supertest-as-promised": "^3"
  }
}
